<div class="jumbotron">
    <div class="container">

        
        <!--Carousel Wrapper-->
          
        <div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">
            <style>
                #Idicators {
                    position: absolute;
                    bottom: -40px;
                }

                #Controls {
                    position: absolute;
                    right: 20px;
                    top: 25px;
                   
                }
            </style>

            <h1>Our Products</h1>
            <div id="Controls">
                <a class="multi-item-example" href="#multi-item-example" role="button" data-slide="prev" style="text-align:right">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="multi-item-example" href="#multi-item-example" role="button" data-slide="next" style="text-align:right">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <ol class="carousel-indicators" id="Idicators">
                <li data-target="#multi-item-example" data-slide-to="0" class="active"></li>
                <li data-target="#multi-item-example" data-slide-to="1"></li>
                <li data-target="#multi-item-example" data-slide-to="2"></li>
                <li data-target="#multi-item-example" data-slide-to="3"></li>
                <li data-target="#multi-item-example" data-slide-to="4"></li>
            </ol>
           



            <!--/.Slides-->
            <!--Controls-->
            <!--/.Controls-->
            <!--Indicators-->
            <!--/.Indicators-->
            <!--Slides-->
            <div class="container">
                <div class="carousel-inner" role="listbox">




                    @{int c = 1;}
                    @foreach (string name in Model.Categories)

                    {
                        if (Model.Categories.Count() - c < 3)
                        {
                            break;
                        }
                        @if (c == 1)
                        {
                            <div class="carousel-item active">
                                <div class="row">
                                    @for (int k = 0; k < 3; k++)
                                    {
                                        <div class="col-md-4">
                                            <div class="card mb-2">
                                                <img class="card-img-top" src="~/category@((c+k).ToString())-small.jpeg"
                                                     alt="Card image cap">
                                                <div class="card-body" style="text-align: center">
                                                    <h4 class="card-title" style="text-align: center">@(Model.Categories.ElementAt(k + c - 1))</h4>
                                                    <button type="button" class="btn btn-primary">GoTo</button>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <div class="row">
                                    @for (int k = 0; k < 3; k++)
                                    {
                                        <div class="col-md-4">
                                            <div class="card mb-2">
                                                <img class="card-img-top" src="~/category@((c+k).ToString())-small.jpeg"
                                                     alt="Card image cap">
                                                <div class="card-body" style="text-align: center">
                                                    <h4 class="card-title" style="text-align: center">@(Model.Categories.ElementAt(k + c - 1))</h4>
                                                    <button type="button" class="btn btn-primary" onclick="@Model.">GoTo</button>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                </div>
                            </div>
                        }




                        c++;
                    }



                </div>
                <!--/.Third slide-->

            </div>


        </div>
            <!--/.Carousel Wrapper-->
        </div>

    </div>
