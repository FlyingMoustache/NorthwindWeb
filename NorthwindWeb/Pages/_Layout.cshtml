<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>@ViewData["Title"]</title>
</head>

<body>
    <header style="align-self:center">
        <div class="container" style="background-color: inherit">
            <img src="~/logo.jpg" class="img-fluid" style="width: 100% \9;" alt="Responsive image">
            <nav class="navbar  navbar-expand-lg navbar-dark" style="background-color: #61a9b0;">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav" style="height:45px">
                        <li class="nav-item active" style="height:45px">
                            <a class="nav-link" href="Index">Home <span class="sr-only">(current)</span></a>
                        </li>

                        <li class="nav-item" style="height:45px">
                            <a class="nav-link" href="Products" style="height:45px">Products</a>
                        </li>
                        <li class="nav-item" style="height:45px">
                            <a class="nav-link" href="Contact" style="height:45px">Contact</a>
                        </li>
                        <li class="nav-item" style="height:45px">
                            <a class="nav-link disabled" href="#" style="height:45px">Orders</a>
                        </li>
                    </ul>
                </div>
            </nav>

        </div>
    </header>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>Copyright &copy; @DateTime.Now.ToString("yyyy"); - @ViewData["Title"]</p>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>